<%= stylesheet_link_tag "vuls" %>
<div class="container">
  <div class="page-header">
    <h1 id="timeline"><%= @project.name %></h1>
    <center><p><%= markdown(@project.narrative) %></p></center>
  </div>
  <ul class="timeline">
    <li>
      <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
      <div class="timeline-panel">
        <div class="timeline-heading">
          <h4 class="timeline-title"><%= @project.name %> Released</h4>
          <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> Date released: <%= @project.datedisc %></small></p>
        </div>
        <div class="timeline-body">
          <p><%= @project.description %></p>
        </div>
      </div>
    </li>
    <% @counter = 1 %>
    <% @array.each do |event| %>
        <% if @counter % 2 == 1 %>
          <% puts %><li class="timeline-inverted">
          <% else %><li>
        <% end %>
        <% @rand = (1...30).sort_by{rand}[1] %>
        <% if event.eventtype == "vulnerability" %>
          <% puts %><div class="timeline-badge danger">
        <% elsif @rand % 4 == 1 %>
          <%puts %><div class="timeline-badge success">
        <% elsif @rand % 4 == 2 %>
          <%puts %><div class="timeline-badge info">
        <% elsif @rand % 4 == 3 %>
          <%puts %><div class="timeline-badge warning">
        <% else %>
          <%puts %><div class="timeline-badge">
        <% end %>

          <i class="glyphicon glyphicon-credit-card"></i></div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4 class="timeline-title"><%= event.title %></h4>
              <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> Date of Event: <%= event.date %></small></p>
            </div>
            <div class="timeline-body">
              <p><%= event.description %></p>
            </div>
          </div>
        </li>

        <% @counter += 1 %>

    <% end %>

  </ul>
</div>


